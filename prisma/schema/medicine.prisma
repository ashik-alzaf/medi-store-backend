model Medicine {
    id         String   @id @default(uuid())
    name       String   @db.VarChar(100)
    price      Int      @default(0)
    stock      Int      @default(0)
    expiryDate DateTime
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt

    // @@index([])
    @@map("medicines")
}
